extends layout

block content
    h1.title CCRunner
    p.title Welcome to CCRunner

    div#intro
        //login form
        form#login_form.form-horizontal.login_form_container(action='/login', method='POST')
            div.form-group
                label.sr-only(for="login_email") Email
                input#login_email.form-control(type='email', name='email', placeholder='Email')
            div.form-group
                label.sr-only(for='login_password') Password
                input#login_password.form-control(type='password', name='password' placeholder='Password')
            div.form-group
                button.btn.btn-primary.btn-block(type='submit') Sign in
                //join modal trigger button
                button.btn.btn-info.btn-block(type='button', data-toggle='modal', data-target='#join_modal') Join

        //join modal
        div#join_modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='join_modal')
            div.modal-dialog.modal-sm(role='document')
                div.modal-content
                    div.modal-header
                        h4.modal-title Join Us!
                    div.modal-body
                        form#join_form.form-horizontal.join_form_container(action='/join', method='POST')
                            div.form-group
                                label.sr-only(for="join_email") Email
                                input#join_email.form-control(type='email', name='email', placeholder='Email')
                            div.form-group
                                label.sr-only(for='join_password') Password
                                input#join_password.form-control(type='password', name='password' placeholder='Password')
                            div.form-group
                                button.btn.btn-primary.btn-block(type='submit') Join
                                button.btn.btn-default.btn-block(type='button', data-dismiss='modal') Close

    img(src='/images/code-wallpaper-18.png')
